#include <iostream>
#include <string>
#include <cmath>
#include <windows.h>
#include <clocale>

// Function to calculate the factorial of a number
int factorial(int n) {
    if (n == 0 || n == 1)
        return 1;
    else
        return n * factorial(n - 1);
}
// Функция очистки экрана
void clearScreen() {
    #ifdef _WIN32
        system("cls");
    #else
        system("clear");
    #endif
}

int main() {
    setlocale(LC_ALL, "Ru");
    
    std::cout << "Введите число: ";
    int num;
    std::cin >> num;

    std::cout << "Сумма " << num << " равен " << sum(num) << std::endl;


int main() {
    setlocale(LC_ALL, "Ru");
    
    std::cout << "Введите число: ";
    std::cout << "Введите число2: ";
    int num, num2;
    std::cin >> num;
    std::cin >> num2;
    std::cout << "Сумма " << num << num2 << " равен " << (num + num2) << std::endl;
   
    return 0;
}
